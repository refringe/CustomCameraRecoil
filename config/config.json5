{
    // General settings for the mod
    general: {
        // Enables the use of the mod
        enabled: true,

        // Enables verbose logging
        // Logs the default and altered camera recoil values for each weapon.
        debug: false,
    },

    recoil: {
        // Selects the method to adjust camera recoil. ["precise" or "percent"]
        "method": "percent",

        // The specific camera recoil value to set on all guns. [float]
        // Only used if the above method option is set to "precise".
        // Keep the value between 0.0 and 1.0.
        //
        // Example: A value of 0.0 will disable camera recoil entirely.
        "precise": 0.0,

        // The percentage the camera recoil value will be adjusted by. [integer]
        // Only used if the above "method" option is set to "percent".
        // Keep the value between -99 and 100.
        //
        // Example: A value of -50 will decrease camera recoil by 50%.
        "percent": -50
    },
}
